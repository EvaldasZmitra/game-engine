{
  "name": "myapp",
  "static": false,
  "compiler": "gcc",
  "flags": {
    "compiler": [
      "-g",
      "-W",
      "-Wall",
      "-O0",
      "-fopenmp",
      "-fdiagnostics-color=always"
    ],
    "linker": ["-lopengl32", "-mconsole"]
  },
  "libraries": ["glew", "SDL2", "glib-2.0", "assimp"],
  "packages": {
    "pacman": [
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-assimp",
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-glew",
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-SDL2",
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-glib2"
    ],
    "apt": []
  }
}
