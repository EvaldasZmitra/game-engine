{
  "name": "myapp",
  "compiler": "gcc",
  "type": "dll",
  "flags": {
    "compiler": ["-g", "-W", "-O0"],
    "linker": ["-lopengl32"]
  },
  "libraries": ["glew", "SDL2", "glib-2.0"],
  "packages": {
    "pacman": [
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-glew",
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-SDL2",
      "pacman -S --needed --noconfirm mingw-w64-ucrt-x86_64-glib2"
    ],
    "apt": []
  }
}
